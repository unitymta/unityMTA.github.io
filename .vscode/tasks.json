// Sass configuration
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sass Compile",
            "type": "shell",
            "command": "node-sass ./css/style.scss ./css/style.css",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Less Compile",
            "type": "shell",
            "command": "lessc style.less style.css",
            "group": "build"
        }
    ]
}